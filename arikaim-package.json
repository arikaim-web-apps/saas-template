{      
    "title": "SaaS template",
    "version": "1.0.0",
    "name": "saas",
    "package-type": "template",
    "icon": "users",
    "thumbnail": "thumbnail-saas-template.png",
    "repository": "https://github.com/arikaim-web-apps/saas-template.git",
    "require": {
        "components": [
            "icons",
            "tailwind"
        ],
        "library": [
            "jquery",
            "arikaim",
            "arikaim-ui"
        ],
        "extensions": [
            "users"
        ]
    },
    "routes": [
        {
            "path": "/",         
            "home": true,  
            "page": "home",
            "language-path": true,
            "name": "Home"                   
        },
        {
            "path": "/privacy-policy",           
            "page": "privacy",
            "language-path": true,
            "name": "Privacy"                   
        },
        {
            "path": "/terms",           
            "page": "terms",
            "language-path": true,
            "name": "Terms"                   
        },
        {
            "path": "/contact-us",         
            "page": "contact-us",          
            "name": "contactUs"                   
        },
        {
            "path": "/about",      
            "language-path": true,     
            "page": "about",
            "name": "About"                   
        },
        {
            "path": "/blog",      
            "language-path": true,     
            "page": "blog",
            "name": "Blog"                   
        }
    ],
    "languages": [
        "en"      
    ],
    "themes": [
        "default"
    ],
    "default-theme": "default",
    "include": {     
        "components": [    
            "current>users"
        ],      
        "js": [
            "form.js",
            "theme.js",
            "flyonui.js"
        ],
        "css": [           
            "style.css",
            "tailwind.min.css"
        ],        
        "library": [
            "jquery",                                
            "arikaim",
            "arikaim-ui"                     
        ]       
    },
    "modules": {
        "subscriptions": "subscriptions"
    }
}
